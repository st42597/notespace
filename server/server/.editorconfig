# EditorConfig is awesome: https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{kt,kts}]
indent_style = space
indent_size = 4

max_line_length = 100

continuation_indent_size = 8

ij_kotlin_imports_layout =
*,java.**,javax.**,kotlin.**,kotlinx.**,com.**,org.**,

[*.{kt,kts}]
insert_final_newline = true

[*.xml]
indent_style = space
indent_size = 2

[*.gradle]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false